# ============================================
# GEMINI API (RECOMMENDED - FREE & CLOUD-BASED)
# ============================================
# Get your FREE API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# ============================================
# FIREBASE WEB CONFIG (FRONTEND / VITE)
# ============================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=1234567890
VITE_FIREBASE_APP_ID=1:1234567890:web:yourappid
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# OLLAMA (FALLBACK - LOCAL ONLY)
# ============================================
# Only used if GEMINI_API_KEY is not set
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.2:3b-instruct-q4_K_M

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8793

# Set this only when frontend and API are on different domains.
# VITE_ASSISTANT_API_URL=https://your-api-domain.com

# NETLIFY NOTES:
# In Netlify Site settings > Environment variables, set GEMINI_API_KEY and GEMINI_MODEL.
# Do not rely on OLLAMA_* on Netlify (it is local-only fallback).
